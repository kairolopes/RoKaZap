{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        {
          "cmd": "npm install",
          "customName": "Install backend dependencies"
        }
      ]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "commands": [
        {
          "cmd": "npm run build",
          "customName": "Build backend"
        }
      ]
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js"
  }
}
