{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        {
          "cmd": "npm install --prefix backend",
          "customName": "Install backend dependencies (backend/)"
        }
      ]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "commands": [
        {
          "cmd": "npm run build --prefix backend",
          "customName": "Build backend (backend/)"
        }
      ]
    }
  },
  "deploy": {
    "startCommand": "npm run start --prefix backend"
  }
}
